<% layout('layouts/boilerplate.ejs')%>


    <div class="d-flex flex-column align-items-center justify-content-center mt-5">
        <h1>Welcome to the tutoring center!</h1>
        <form action="/signin" class="validated-form d-flex flex-column align-items-right mb-3" method="POST"
            novalidate>
            <label for="studentId" class="form-label"></label>
            <input type="text" class="form-control align-self-center mb-3" id="studentId" name="studentId"
                placeholder="enter student ID number" required>
            <div class="valid-feedback">Looks good!</div>
            <button class="btn btn-success">Sign In as Student</button>
        </form>
        <a href="/tutor" class="btn btn-info">Click Here for Tutor Panel</a>
    </div>